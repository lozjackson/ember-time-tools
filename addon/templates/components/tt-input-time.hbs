{{#if hasBlock}}
  {{yield}}
{{else}}
  {{tt-time-field
    value=(format-date value displayFormat)
    disabled=disabled
    placeholder=placeholder
    toggleTimePicker="toggleTimePicker"}}
  {{#if showTimePicker}}
    {{#ember-wormhole to=destinationElementId renderInPlace=(unless destinationElementId true)}}
      {{tt-time-picker
        timeInterval=timeInterval
        displayFormat=pickerDisplayFormat
        selectedTime=value
        setPositionByCursor=setPositionByCursor
        scrollToSelectedTime=scrollToSelectedTime
        defaultToday=defaultToday
        inputTimeElement=this.element
        select="selectTime"
        close="closeTimePicker"}}
    {{/ember-wormhole}}
  {{/if}}
{{/if}}
