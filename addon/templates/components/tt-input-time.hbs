{{#if hasBlock}}
  {{yield}}
{{else}}
  {{tt-time-field
    value=(format-date value displayFormat)
    disabled=disabled
    placeholder=placeholder
    toggleTimePicker="toggleTimePicker"}}
  {{#if showTimePicker}}
    {{tt-time-picker
      timeInterval=timeInterval
      displayFormat=pickerDisplayFormat
      selectedTime=value
      select="selectTime"
      close="closeTimePicker"}}
  {{/if}}
{{/if}}
