{{#if hasBlock}}
  {{yield}}
{{else}}
  {{tt-date-field
    value=(format-date value displayFormat)
    disabled=disabled
    placeholder=placeholder
    toggleDatePicker="toggleDatePicker"}}
  {{#if showDatePicker}}
    {{tt-date-picker
      selectedDate=value
      select="selectDate"
      close="closeDatePicker"}}
  {{/if}}
{{/if}}
