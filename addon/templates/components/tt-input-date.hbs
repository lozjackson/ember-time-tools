{{#if hasBlock}}
  {{yield}}
{{else}}
  {{tt-date-field
    value=(format-date value displayFormat)
    disabled=disabled
    placeholder=placeholder
    toggleDatePicker=(action "toggleDatePicker")}}
  {{#if showDatePicker}}
    {{#ember-wormhole to=destinationElementId renderInPlace=(unless destinationElementId true)}}
      {{tt-date-picker
        selectedDate=value
        setPositionByCursor=setPositionByCursor
        inputDateElement=this.element
        select=(action "selectDate")
        close=(action "closeDatePicker")}}
    {{/ember-wormhole}}
  {{/if}}
{{/if}}
