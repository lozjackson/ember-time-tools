<header>
  <div class="top-panel">
    <div class="date">{{monthName}} {{year}}</div>
    <div class="navigation">
      <button {{action "prevMonth"}}>{{svg-triangle direction="left"}}</button>
      <button {{action "today"}}>Today</button>
      <button {{action "nextMonth"}}>{{svg-triangle direction="right"}}</button>
    </div>
  </div>
  <div class="day-names-row">
    {{#each dayNames as |dayName|}}
      <div class="day-cell">
        <span class="day-name">{{dayName}}</span>
      </div>
    {{/each}}
  </div>

</header>
<div class="body calendar-month">
  {{#each weeks as |row|}}
    {{#tt-calendar-week-row
      days=row
      model=sortedEvents
      as |events|}}
      {{#tt-event-container select=(action select)}}
        {{#each events as |event|}}
          <div class="event-row">
          {{tt-calendar-month-event
            model=event
            layout=eventTemplate
            selectedEvent=selected
            select=(action select)
            dblClick=(action dblClick)}}
          </div>
        {{/each}}
      {{/tt-event-container}}
    {{/tt-calendar-week-row}}
  {{/each}}
</div>
